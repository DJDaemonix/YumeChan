@page "/ServersExplorer"
@attribute [Authorize]

@using Discord;
@using Discord.WebSocket;
@using Nodsoft.YumeChan.Core;

@inject YumeCore BotService

<h1>Servers List</h1>

<br />

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>User Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SocketGuild guild in GuildsList)
        {
            <tr>
                <td>@guild.Id</td>
                <td>@guild.Name</td>
                <td>@guild.Users.Count</td>
            </tr>
        }
    </tbody>
</table>

@code 
{
    public IReadOnlyCollection<SocketGuild> GuildsList => BotService.Client.Guilds;
}
